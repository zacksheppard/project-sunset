<head>
  <title>Sunset Somewhere</title>
  <link href='http://fonts.googleapis.com/css?family=Marcellus+SC' rel='stylesheet' type='text/css'>
  <link href='http://fonts.googleapis.com/css?family=Lobster' rel='stylesheet' type='text/css'>
  <style type="text/css" media="screen">
    body { 
      background: url("<%= @photo.sunset_by_lat_lon %>") no-repeat center fixed; 
    }
  </style>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
  <body>
  <div id="footer" class="col-md-12">
    <div id="city" >
      <p id="city-text" class="alignleft"><a target="_map" href="http://www.openstreetmap.org/?mlat=<%= @photo.lat %>&mlon=<%= @photo.lon %>#map=4/<%= @photo.lat %>/<%= @photo.lon %>"> <%= @photo.location.titleize %>
         <%= image_tag "map_icon.svg", height: '20', width: '20' %></a></p>
    </div>
    <div id="attribution-text">
      <p id="" class="alignleft"> <a href ="<%=@photo.photo_url%>">photo by <%= @photo.author %>,</a><a href="http://flickr.com">on Flickr</a></p>
      <p id="about-text" class="text-muted alignright"><a href="#about" class="btn" data-target="#about" data-toggle="modal">About Sunset Somewhere</a></p>
    </div>
  </div>
  <%= render "application/about" %>
</body>
